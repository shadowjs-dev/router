{
  "name": "@shadow-js/router",
  "version": "0.1.0",
  "description": "Minimal, type-safe router for ShadowJS",
  "author": "Jehaad AL-Johani",
  "homepage": "https://github.com/shadow-js/router#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/shadow-js/router.git"
  },
  "bugs": {
    "url": "https://github.com/shadow-js/router/issues"
  },
  "keywords": [
    "shadowjs",
    "router",
    "jsx",
    "framework",
    "client routing"
  ],
  "engines": {
    "node": ">=20"
  },
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "format:check": "prettier --check src/**/*.{ts,tsx}",
    "analyze-bundle": "node benchmark/bundle-size.js",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "npm run build && npm run build:types"
  },
  "peerDependencies": {
    "@shadow-js/core": "^0.1.0"
  },
  "peerDependenciesMeta": {
    "@shadow-js/core": {
      "optional": false
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@types/node": "^22.5.4",
    "tsup": "^8.1.0",
    "typescript": "^5.5.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
